{
  "manifest_version": 2,
  "name": "Reps Reporting",
  "version": "1.0",
  "description": "Report your Reps activities without opening the Reps portal.",
  "icons": {
    "48": "icons/icon.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon.png",
      "38": "icons/icon.png"
    },
    "default_title": "Reporting",
    "default_popup": "https://reps.mozilla.org/reports/new/"
  },
  "permissions": [
    "webRequest",
    "<all_urls>"
  ]
}
